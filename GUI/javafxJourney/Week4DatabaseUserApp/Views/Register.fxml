                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Admin" />
                    <String fx:value="User" />
                </FXCollections>
            </items>
            <VBox.margin>
                <Insets left="66.0"/>
            </VBox.margin>
        </ChoiceBox>

        <Label fx:id="statusCheck" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="248.0" textFill="white">
            <VBox.margin>
                <Insets bottom="6.0" left="169.0" top="74.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="7.0" left="17.0" right="7.0" top="7.0" />
            </padding>
        </Label>
        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#registerUser" prefWidth="248.0" styleClass="signupBtn" text="signup">
            <VBox.margin>
                <Insets left="169.0" top="14.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
        </Button>


        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#backToLogin" prefWidth="248.0" styleClass="backBtn" text="Back to login">
