    <VBox prefHeight="538.0" prefWidth="600.0">
        <VBox.margin>
            <Insets top="19.0" />
        </VBox.margin>
        <TextField fx:id="usernameField" promptText="Enter username">
            <VBox.margin>
                <Insets bottom="20.0" left="65.0" right="65.0" top="41.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </TextField>
        <TextField fx:id="emailField" layoutX="75.0" layoutY="51.0" promptText="Enter your Email">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="10.0" left="65.0" right="65.0" top="10.0" />
            </VBox.margin>
        </TextField>
        <TextField fx:id="passwordField" layoutX="75.0" layoutY="120.0" prefHeight="38.0" prefWidth="457.0" promptText="Enter password">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="10.0" left="65.0" right="65.0" top="10.0" />
            </VBox.margin>
        </TextField>
        <TextField fx:id="confirmPassword" layoutX="75.0" layoutY="179.0" prefHeight="38.0" prefWidth="457.0" promptText="confirm-password">
