            <VBox.margin>
                <Insets bottom="10.0" left="65.0" right="65.0" top="10.0" />
            </VBox.margin>
        </TextField>
        <ChoiceBox fx:id="rolechoiceBox" prefWidth="470.0" minHeight="40.0" value="Choose your role">
